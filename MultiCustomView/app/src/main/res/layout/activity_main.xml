<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.multiplecustomview.BitmapCanvas
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@android:id/accessibilityActionPageUp"
        android:id="@+id/topview"
        android:background="@color/PURPLE"
        tools:ignore="NewApi" />

    <com.example.multiplecustomview.CircleCanvas
        android:id="@+id/bodyview"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/topview"
        android:layout_alignParentBottom="@android:bool/config_showDefaultHome"/>

</RelativeLayout>